            },
            "sa-east-1": {
                "AMI": "ami-3e3be423"
            },
            "ap-southeast-1": {
                "AMI": "ami-74dda626"
            },
            "ap-southeast-2": {
                "AMI": "ami-b3990e89"
            },
            "ap-northeast-1": {
                "AMI": "ami-dcfa4edd"
            }
        },
        /**
         * AWS AMI: Ubuntu 14.04
         */
        "AMIMappingUbuntu1404": {
            "us-east-1": {
                "AMI": "ami-30519058"
            },
            "us-west-1": {
                "AMI": "ami-957070d0"
            },
            "us-west-2": {
                "AMI": "ami-5b58266b"
            },
            "eu-west-1": {
                "AMI": "ami-3986524e"
            },
            "sa-east-1": {
                "AMI": "ami-1189270c"
            },
            "ap-southeast-1": {
                "AMI": "ami-dad68888"
